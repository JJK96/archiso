#!/bin/sh
path=$(pwd)
function _find() {
	file="$(find "$path" -maxdepth 1 -mindepth 1 -name main.tex)"
}
while ! [ $file ];
do
	_find
    path="$(readlink -f "$path"/..)"
done
cd ${file%main.tex}
pdflatex --enable-write18 main.tex && \
pkill -HUP mupdf && \
bibtex main && \
pdflatex --enable-write18 main.tex && \
pdflatex --enable-write18 main.tex && \
pkill -HUP mupdf
