#!/usr/bin/env bash

if [[ "$1" = run ]]; then
    while :; do
        while getopts ":v:" opt; do
          case "$opt" in
            v) mkdir -p $(echo "$OPTARG" | cut -d: -f1)
              ;;
          esac
        done
        ((OPTIND++)) 
        [ $OPTIND -gt $# ] && break
    done
fi

lima nerdctl "$@"
