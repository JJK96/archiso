# class                 border  backgr. text indicator child_border
client.focused          $bg     $fg     $bg  $fg       $fg
client.focused_inactive $bg     $fg     $bg  $fg       $fg
client.unfocused        $fg     $bg     $fg  $bg       $fg
client.urgent           $fg     $bg     $fg  $bg       $fg
client.placeholder      $fg     $bg     $fg  $bg       $fg

client.background       $bg
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
	tray_output primary
        status_command i3blocks
	position top
        colors {
            background $color0
            statusline $fg
            separator $fg
            focused_workspace $fg $fg $bg
        }
}

bindsym $mod+Control+p exec mypassmenu --type
#keepass --auto-type
bindsym $mod+Mod1+p exec keepass

# start a terminal
bindsym $mod+Return exec $terminal
bindsym $mod+i exec $browser
bindsym $mod+r exec $terminal -e "ranger --cmd='cd /tmp/Downloads'"
# kill focused window
bindsym $mod+q kill

# screenshot
# scrot & gimp - root
bindsym Print exec scrot -e 'mv $f /tmp/'
# scrot & gimp - select window or rectangle
bindsym --release $mod+Print exec "scrot -s -e 'mv $f /tmp/'"

# start dmenu (a program launcher)
bindsym $mod+a exec "rofi -combi-modi drun,run,ssh -show combi"

bindsym $mod+x exec "i3lock -ui ~/Pictures/BSOL.png"
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
